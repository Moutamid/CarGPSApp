    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:padding="10dp"
                    app:cardBackgroundColor="#F8F5F5"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"

                        >

                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_gravity="center"
                            android:layout_margin="10dp"
                            android:src="@drawable/ic_baseline_my_location_24"
                            app:tint="@color/purple_700" />

                        <TextView
                            android:id="@+id/parked"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Parked"
                            android:textAlignment="center"
                            android:textColor="#2195F2"
                            android:textColorLink="#2195F2"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            app:tint="@color/purple_700">

                        </TextView>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@color/purple_700"
                                android:padding="10dp"
                                android:text="0"
                                android:textSize="20sp"
                                android:textStyle="bold" />

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_baseline_directions_car_24"
                                app:tint="@color/purple_700" />
                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:padding="10dp"
                    app:cardBackgroundColor="#F8F5F5"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_gravity="center"
                            android:layout_margin="10dp"
                            android:src="@drawable/ic_baseline_my_location_24"
                            app:tint="#4CAF50" />

                        <TextView
                            android:id="@+id/moving"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Moving"
                            android:textAlignment="center"
                            android:textColor="#4CAE50"
                            android:textColorLink="#2195F2"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            app:tint="@color/purple_700">

                        </TextView>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="#4CAF50"
                                android:padding="10dp"
                                android:text="0"
                                android:textSize="20sp"
                                android:textStyle="bold" />

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_baseline_directions_car_24"
                                app:tint="#4CAF50" />
                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:padding="10dp"
                    app:cardBackgroundColor="#F8F5F5"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_gravity="center"
                            android:layout_margin="10dp"
                            android:src="@drawable/ic_baseline_my_location_24"
                            app:tint="#9C27B0" />

                        <TextView
                            android:id="@+id/all"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="All"
                            android:textAlignment="center"
                            android:textColor="#9B27AF"
                            android:textColorLink="#2195F2"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            app:tint="@color/purple_700">

                        </TextView>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="#9C27B0"
                                android:padding="10dp"
                                android:text="0"
                                android:textSize="20sp"
                                android:textStyle="bold" />

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_baseline_directions_car_24"
                                app:tint="#9C27B0" />
                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:padding="10dp"
                    app:cardBackgroundColor="#F8F5F5"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_gravity="center"
                            android:layout_margin="10dp"
                            android:src="@drawable/ic_baseline_my_location_24"
                            app:tint="#393A3A" />

                        <TextView
                            android:id="@+id/late"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Late"
                            android:textAlignment="center"
                            android:textColor="#393A3A"
                            android:textColorLink="#2195F2"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            app:tint="@color/purple_700">

                        </TextView>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="#393A3A"
                                android:padding="10dp"
                                android:text="0"
                                android:textSize="20sp"
                                android:textStyle="bold" />

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_baseline_directions_car_24"
                                app:tint="#393A3A" />
                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:padding="10dp"
                    app:cardBackgroundColor="#F8F5F5"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_gravity="center"
                            android:layout_margin="10dp"
                            android:src="@drawable/ic_baseline_my_location_24"
                            app:tint="#FF9800" />

                        <TextView
                            android:id="@+id/renewal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Renewal"
                            android:textAlignment="center"
                            android:textColor="#FE9700"
                            android:textColorLink="#2195F2"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            app:tint="@color/purple_700">

                        </TextView>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="#FF9800"
                                android:padding="10dp"
                                android:text="0"
                                android:textSize="20sp"
                                android:textStyle="bold" />

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_baseline_directions_car_24"
                                app:tint="#FF9800" />
                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:padding="10dp"
                    app:cardBackgroundColor="#F8F5F5"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_gravity="center"
                            android:layout_margin="10dp"
                            android:src="@drawable/ic_baseline_my_location_24"
                            app:tint="#F3214B" />

                        <TextView
                            android:id="@+id/alert"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Alert"
                            android:textAlignment="center"
                            android:textColor="#F2214B"
                            android:textColorLink="#2195F2"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            app:tint="@color/purple_700">

                        </TextView>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="#F3214B"
                                android:padding="10dp"
                                android:text="0"
                                android:textSize="20sp"
                                android:textStyle="bold" />

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_baseline_directions_car_24"
                                app:tint="#F3214B" />
                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                >
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="10dp"
                    android:src="@drawable/ic_baseline_add_location_alt_24" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="Summary"
                    android:textColor="#FDFDFD"
                    android:textSize="25sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:padding="10dp"
                app:cardBackgroundColor="#F8F5F5"
                app:cardCornerRadius="30dp"
                app:cardElevation="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="29dp"
                        android:layout_height="50dp"
                        android:id="@+id/left_arrow"
                        android:src="@drawable/left_arrow">
                    </ImageView>

                    <androidx.viewpager.widget.ViewPager
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:id="@+id/viewPager"/>


                    <ImageView
                        android:layout_width="29dp"
                        android:layout_height="50dp"
                        android:id="@+id/right_arrow"
                        android:src="@drawable/right_arrow">

                    </ImageView>


                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>